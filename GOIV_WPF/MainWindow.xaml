                                    <ContextMenu>
                                        <MenuItem Name="menu_preview_package_toggleblackwhite"  Header="{StaticResource STRING_PREVIEW_TOGGLE_BLACKWHITE}" Height="32" Click="menu_preview_package_toggleblackwhite_Click"/>
                                    </ContextMenu>
                                </Label.ContextMenu>
                            </Label>
