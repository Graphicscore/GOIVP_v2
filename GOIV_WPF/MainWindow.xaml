                                    <ContextMenu>
                                        <MenuItem Name="menu_preview_setimage" Header="{StaticResource STRING_PREVIEW_SETIMAGE}" Icon="{StaticResource IMAGE_IMAGE_ICON}" Height="32" Click="menu_preview_setimage_Click"/>
